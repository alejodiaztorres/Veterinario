<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Dueño</th>
      <th>Nombre</th>
      <th>Raza</th>
      <th>Nacimiento</th>
      <th>Peso promedio</th>
      <th>Altura promedio</th>
      <th>Altura máxima:</th>
      <th>Peso máximo</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.cliente.name %></td>
        <td><%= pet.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.dbay %></td>
        <td><%= pet.alto_prom %></td>
        <td><%= pet.peso_prom %></td>
        <td><%= pet.altura_max %></td>
        <td><%= pet.peso_max %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

